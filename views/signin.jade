  body.hold-transition.login-page
    .login-box
      .login-logo
        a(href='/')
          | e
          b TBS 
          i Cloud
      // /.login-logo
      .login-box-body
        p.login-box-msg Sign in to start your session
        form(action='/', method='post')
          .form-group.has-feedback
            input.in-user.form-control(type='email', placeholder='Email', value='sumrit@convergence.co.th')
            span.glyphicon.glyphicon-envelope.form-control-feedback
          .form-group.has-feedback
            input.in-pwd.form-control(type='password', placeholder='Password', value='secret1234')
            span.glyphicon.glyphicon-lock.form-control-feedback
          .row
            .col-xs-8
             //
              .checkbox.icheck
                label
                  input(type='checkbox')
                  |  Remember Me
            // /.col
            .col-xs-4
              button.btn-signin.btn.btn-primary.btn-block.btn-flat(type='button') Sign In
              //a#btn-signin.btn.btn-primary.btn-block.btn-flat(href='javascript:void(0)', onclick='signin()') Sign In
            // /.col
        .social-auth-links.text-center
         //
          p - OR -
          a.btn.btn-block.btn-social.btn-facebook.btn-flat(href='#')
            i.fa.fa-facebook
            |  Sign in using
            |         Facebook
          a.btn.btn-block.btn-social.btn-google.btn-flat(href='#')
            i.fa.fa-google-plus
            |  Sign in using
            |         Google+
        // /.social-auth-links
        a(href='#') I forgot my password
        br
        a.text-center(href='#') Register a new membership
      // /.login-box-body
    // /.login-box
    // jQuery 2.2.0
    script(type='text/javascript', src='/javascripts/jQuery-2.2.0.min.js')
