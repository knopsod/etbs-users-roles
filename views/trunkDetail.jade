extend ../layout2

block header

block content
	// Content Header (Page header)
	section.content-header
		h1
			| Trunk
			small Info
		ol.breadcrumb
			li
				a(href='/api/v1/trunk?access_token=' + token)
					i.fa.fa-dashboard
					|  Extensions
			li
				a(href='/api/v1/trunk?access_token=' + token) trunks
			li.active Info

	// Main content
	section.content
		.row
			.col-md-3
				// Profile Image
				.box.box-primary
					.box-body.box-profile
						img.profile-user-img.img-responsive.img-circle(src='/AdminLTE-2.3.3/dist/img/conv-160x160.png', alt='User profile picture')
						h3.profile-username.text-center NONE
						p.text-muted.text-center License created at !{prettyDate(lic_created_at)}
						ul.list-group.list-group-unbordered
							li.list-group-item
								b License
								a.pull-right !{ext_lic}
							li.list-group-item
								b Extensions
								a.lb-total-ext.pull-right 543
							li.list-group-item
								b Groups
								a.lb-total-group.pull-right 13,287
					// /.box-body
				// /.box
			// /.col
			.col-md-9
				.nav-tabs-custom
					ul.nav.nav-tabs
						li.active
							a(href='#info', data-toggle='tab') Detail
					.tab-content
						#info.tab-pane.active
							form#detailTrunkForm.form-horizontal
										
								.form-group.disabled
									label.col-sm-2.control-label(for='inputRouteNo') Route
									.col-sm-10
										input#inputRouteNo.form-control(name='routeno', type='number', placeholder='Route')
								.form-group.disabled
									label.col-sm-2.control-label(for='inputTrunk') Trunk
									.col-sm-10
										input#inputTrunkNo.form-control(name='trunkno', type='text', placeholder='Trunk')
								.form-group
									label.col-sm-2.control-label(for='inputTrunkName') Name
									.col-sm-10
										input#inputTrunkName.form-control(name='trkname', type='text', placeholder='Name')

								.form-group
									label.col-sm-2.control-label(for='inputTrkCreated') Created At
									.col-sm-10
										input#inputTrkCreated.form-control(type='text', placeholder='Created At', disabled='')
								.form-group
									label.col-sm-2.control-label(for='inputTrkUpdated') Last Updated
									.col-sm-10
										input#inputTrkUpdated.form-control(type='text', placeholder='Last Updated', disabled='')

								.form-group
									.col-sm-offset-2.col-sm-2.col-xs-2
										button.btn-trk-update.btn.btn-success(type='button') Update
									.col-sm-2.col-xs-2
										button.btn-trk-delete.btn.btn-danger(type='button') Delete
						// /.tab-pane
				
